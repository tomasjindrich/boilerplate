extends master

block append settings-custom

block title
  title= get(settings.site.name) + ' | ' + get(page.title)

block append styles
  //- link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
  link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css", rel="stylesheet")
  link(rel="stylesheet", href= getAttachedFile("css/bootstrap.min.css",'?v1'))
  link(rel="stylesheet", href= getAttachedFile("css/theme.min.css",'?v1'))

block append fonts
  link(href='https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&family=Poppins:wght@400;700&display=swap', rel='stylesheet')

block append header 
  include /src/views/components/header

block prepend top 
  if isDev() && get(settings.render.devTool)
    .dropdown.sticky-top.p-3
      button.btn.opacity-9.rounded-pill.btn-warning.dropdown-toggle#dropdownMenuButtonDev(type="button", data-bs-toggle="dropdown", aria-expanded="false")
        | Pages
      ul.dropdown-menu(aria-labelledby="dropdownMenuButtonDev")
        -
          var list_of_pages = [
            'homepage',
            'kategorie',
            'produkt',
            'kosik-1-obsah-kosiku',
            'kosik-2-doprava-a-platba',
            'kosik-3-dodaci-udaje(prihlaseny)',
            'kosik-3-dodaci-udaje(neprihlaseny)',
            'kosik-4-souhrn-objednavky',
            'kosik-5-podekovani',
            'komponenty-formulare',
            'komponenty-podstranka',
          ];

        each val in list_of_pages 
          li
            a.dropdown-item(href= val + '.html')!= val + '<span class="text-300">.html</span>'

  
block main
  main.main.container-xxl.d-flex
    .mt-4.me-4.w-16rem.flex-shrink-0.d-none.d-lg-block.sidebar
      block sidebar
        include /src/views/components/sidebar
    .mt-4.pb-5.flex-fill
      block content
  

block append footer
  include /src/views/components/footer

block append bottom
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
  script(src= getAttachedFile("js/scripts.min.js"))



  

