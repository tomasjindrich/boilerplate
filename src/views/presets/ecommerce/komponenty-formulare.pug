block append content
  
  .container-fluid.container-narrow.my-5
    
    .row.row-cols-1.row-cols-sm-2.gx-5
      .col
        .bg-g100.p-3.p-md-5.mb-5
          .form-vertical-group
            +form-control('Jméno','','Nápověda k položce formuláře.')
            +form-control('Přijmení')
            +form-control('Město')
            +form-control('Ulice')
            +form-control('Číslo popisné')
            +form-control('PSČ')
            +form-control('E-mail','email')
            +form-control('Telefon')

              
      .col
      
        .bg-g100.p-3.p-md-5.mb-5
          form.form-vertical-group(action='')
            +form-control('Přihlašovací e-mail')
            +form-control('Heslo','password')
            .row.row-cols-2
              .col.col-auto.me-auto
                .fs-7
                  a(href="#") Zapomenuté heslo? <br>
                  a(href="#") Nová registrace
              .col.col-auto
                a.btn.btn-primary(href="#", role="button") Přihlásit
        
        .bg-primary.text-light.p-3.p-md-5.mb-5
          form.form-vertical-group.form-control-in-border-0(action='')
            +form-control('Přihlašovací e-mail')
            +form-control('Heslo','password')
            .row.row-cols-2
              .col.col-auto.me-auto
                .fs-7
                  a.link-light(href="#") Zapomenuté heslo? <br>
                  a.link-light(href="#") Nová registrace
              .col.col-auto
                a.btn.btn-secondary(href="#", role="button") Přihlásit
        
        .bg-secondary.text-light.p-3.p-md-5.mb-5
          form.form-vertical-group.form-control-in-border-0(action='')
            +form-control('Přihlašovací e-mail')
            +form-control('Heslo','password')
            .row.row-cols-2
              .col.col-auto.me-auto
                .fs-7
                  a.link-light(href="#") Zapomenuté heslo? <br>
                  a.link-light(href="#") Nová registrace
              .col.col-auto
                a.btn.btn-primary(href="#", role="button") Přihlásit