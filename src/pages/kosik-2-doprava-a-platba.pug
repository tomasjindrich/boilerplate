block append content
  
  .container-fluid.container-narrow.my-5

    .group-of-steps.mb-5.d-none.d-sm-flex
      +step('Košík','1').step-done
      +step('Doprava a platba','2').step-active
      +step('Dodací údaje','3')
      +step('Souhrn a odeslání','4')
    
    h1.fs-3.mb-3 Doprava
    .group-of-item-rows.mb-5
      
     
      +payment-item-row('Hotově na prodejně')
      +payment-item-row('Bankovní převod')
      +payment-item-row('Platební karta')
      +payment-item-row('Platební brána Comgate')
      +payment-item-row('Platební brána Gopay')
    
    
    h1.fs-3.mb-3 Platba
    .group-of-item-rows.mb-5
      

      +shipment-item-row('Osobní odběr','0,-')
      +shipment-item-row('Česká pošta')
      +shipment-item-row('DPD')
      +shipment-item-row('DHL')
      +shipment-item-row('Lokální kurýr')
      +shipment-item-row('Zásilkovna')
    
    .row.row-cols-1.row-cols-sm-2
      .col.mb-4
        a.link-muted(href="kosik-1-obsah-kosiku.html")
          i.me-1.bi.bi-chevron-left
          | Zpět na položky košíku
      .col.text-end
        a.btn.btn-xl.btn-primary(href='kosik-3-dodaci-udaje.html')
          | Dodací údaje
          i.bi.bi-chevron-right.ms-3